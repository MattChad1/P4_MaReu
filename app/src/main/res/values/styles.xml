<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:dialogTheme">@style/AppTheme.Dialog</item> <!-- TimePicker dialog -->
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item> <!-- Alert dialog -->
    </style>


    <style name="styleToolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:textSize">@dimen/size_text_title</item>
    </style>



    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:numbersSelectorColor">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>


    <style name="field_add_reu">
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="height">@dimen/height_field_form</item>
        <item name="android:textSize">@dimen/size_text_classic</item>
    </style>

    <style name="field_add_reu_edittext">
        <item name="android:layout_height">@dimen/height_field_form</item>
        <item name="android:textSize">@dimen/size_text_titre2</item>
    </style>

    <style name="filter_checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_classic</item>
    </style>

    <style name="filter_subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textSize">@dimen/size_text_titre2</item>
    </style>


</resources>